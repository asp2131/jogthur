{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "paths": {
      "@/*": [
        "./*"
      ],
      "@/components/*": [
        "./components/*",
        "./src/components/*"
      ],
      "@/services/*": [
        "./src/services/*"
      ],
      "@/models/*": [
        "./src/models/*"
      ],
      "@/utils/*": [
        "./src/utils/*"
      ],
      "@/stores/*": [
        "./src/stores/*"
      ],
      "@/hooks/*": [
        "./src/hooks/*"
      ],
      "@/config/*": [
        "./src/config/*"
      ]
    }
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    ".expo/types/**/*.ts",
    "expo-env.d.ts"
  ]
}
